        <Button x:Name="buttonMap" Content="Pregled mape" HorizontalAlignment="Left" Margin="512,306,0,0" VerticalAlignment="Top" Height="51" Width="253" Click="buttonMap_Click"/>
        <Button x:Name="buttonKompas" Content="Kompas" HorizontalAlignment="Left" Margin="512,380,0,0" VerticalAlignment="Top" Height="51" Width="253" Click="buttonMap_Click"/>
    </Grid>

</Page>
