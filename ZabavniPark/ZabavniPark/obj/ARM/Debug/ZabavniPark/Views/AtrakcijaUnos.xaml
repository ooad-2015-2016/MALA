<Page
    x:Class="ZabavniPark.AtrakcijaUnos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZabavniPark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Left" Height="25" Margin="141,10,0,0" TextWrapping="Wrap" Text="Atrakcija" VerticalAlignment="Top" Width="68"/>
        <StackPanel HorizontalAlignment="Left" Height="202" Margin="10,35,0,0" VerticalAlignment="Top" Width="340">
            <TextBox x:ConnectionId='3' x:Name="naziv_atrakcije" HorizontalAlignment="Left" Height="11" Margin="108,0,0,0" TextWrapping="Wrap" Text="" Width="142" PlaceholderText="Naziv"/>
            <TextBox x:ConnectionId='4' x:Name="kapacitet_atrakcije" HorizontalAlignment="Left" Height="18" Margin="108,0,0,0" TextWrapping="Wrap" Text="" Width="142" PlaceholderText="Kapacitet"/>
            <TextBox x:ConnectionId='5' x:Name="vrijeme_otvaranja_atrakcije" HorizontalAlignment="Left" Height="20" Margin="108,0,0,0" TextWrapping="Wrap" Text="" Width="142" PlaceholderText="Vrijeme otvaranja"/>
            <TextBox x:ConnectionId='6' x:Name="vrijeme_zatvaranja_atrakcije" HorizontalAlignment="Left" Height="18" Margin="108,0,0,0" TextWrapping="Wrap" Text="" Width="142" PlaceholderText="Vrijeme zatvaranja"                                                       />
            <ComboBox x:ConnectionId='7' x:Name="stanje_atrakcije" HorizontalAlignment="Left" Height="29" Margin="108,0,0,0" Width="142" PlaceholderText="Stanje"/>
            <TextBox x:ConnectionId='8' x:Name="kapacitet_atrakcije1" HorizontalAlignment="Left" Height="21" Margin="108,0,0,0" TextWrapping="Wrap" Text="" Width="142" PlaceholderText="Kapacitet"/>
        </StackPanel>
        <Button x:ConnectionId='2' x:Name="unesi_atrakciju" Content="Unesi" HorizontalAlignment="Left" Height="31" Margin="118,253,0,0" VerticalAlignment="Top" Width="108"/>

    </Grid>
</Page>

