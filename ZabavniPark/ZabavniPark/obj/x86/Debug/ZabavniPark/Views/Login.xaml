<Page
    x:Class="ZabavniPark.ZabavniPark.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZabavniPark.ZabavniPark.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock"  HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top"
                   Text="Dobrodošli na MALA sistem!" FontSize="45" Foreground="SlateGray" FontStyle="Normal"/>
        <TextBox x:ConnectionId='2' x:Name="textBoxUsername" Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="710,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="160"/>
        <PasswordBox x:ConnectionId='3' x:Name="passwordBox" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="710,275,0,0" VerticalAlignment="Top" Height="32" Width="160"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock1" HorizontalAlignment="Left" Margin="510,210,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock2" HorizontalAlignment="Left" Margin="515,280,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <Button x:ConnectionId='6' x:Name="button" Command="{Binding LoginRadnik}" Content="Login" HorizontalAlignment="Left" Margin="580,380,0,0" VerticalAlignment="Top" Height="32" Width="150"                     />

    </Grid>
</Page>

