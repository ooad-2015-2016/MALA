<Page
    x:Class="ZabavniPark.AtrakcijaUnos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZabavniPark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top"
                   Text="Unos nove atrakcije" FontSize="45" Foreground="SlateGray" FontStyle="Normal" />

        <TextBlock x:ConnectionId='2' x:Name="textBlockNaziv" HorizontalAlignment="Left" Margin="555,145,0,0" TextWrapping="Wrap" FontSize="17" Text ="Naziv:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='3' x:Name="textBlockKapacitet" HorizontalAlignment="Left" Margin="525,195,0,0" TextWrapping="Wrap" FontSize="17" Text="Kapacitet:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlockOtvaranje" HorizontalAlignment="Left" Margin="461,245,0,0" TextWrapping="Wrap" FontSize="17" Text="Vrijeme otvaranja:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlockZatvaranje" HorizontalAlignment="Left" Margin="457,295,0,0" TextWrapping="Wrap" FontSize="17" Text="Vrijeme zatvaranja:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlockBrojPosjetilaca" HorizontalAlignment="Left" Margin="415,345,0,0" TextWrapping="Wrap" FontSize="17" Text="Trenutni broj posjetilaca:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='7' x:Name="textBlockStanje" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="550,395,0,0" FontSize="17" Text="Stanje:" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlockTrajanje" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="484,445,0,0" FontSize="17" Text="Trajanje vožnje:" VerticalAlignment="Top"/>


        <TextBox x:ConnectionId='9' x:Name="textBoxNaziv" Text="{Binding Naziv,  UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"  HorizontalAlignment="Left" Margin="620,145,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150"/>
        <TextBox x:ConnectionId='10' x:Name="textBoxKapacitet" Text="{Binding Kapacitet, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" HorizontalAlignment="Left" Margin="620,195,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"  Width="150"/>
        <TimePicker x:ConnectionId='11' x:Name="timePickerOtvaranje" HorizontalAlignment="Left" Time="{Binding VrijemeOtvaranja, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="620,245,0,0" VerticalAlignment="Top" Width="165" Height="32"/>
        <TimePicker x:ConnectionId='12' x:Name="timePickerZatvaranje" HorizontalAlignment="Left" Time="{Binding VrijemeZatvaranja, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="620,295,0,0" VerticalAlignment="Top" Width="150" Height="32"/>
        <TextBox x:ConnectionId='13' x:Name="textBoxBrojPosjetilaca" Text="{Binding TrenutniBrojPosjetilaca, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="620,345,0,0" HorizontalAlignment="Left"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="150"/>
        <ListView x:ConnectionId='14' x:Name="listView" Margin="620,395,0,0" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="150"/>
        <TextBox x:ConnectionId='15' x:Name="textBoxTrajanjeVoznje" Text="{Binding TrajanjeVoznje, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"  HorizontalAlignment="Left" Margin="620,445,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:ConnectionId='16' x:Name="button" Content="Unesi atrakciju" HorizontalAlignment="Left" Margin="560,520,0,0" VerticalAlignment="Top" Width="150"                     />
    </Grid>
</Page>

